<div class="col-md-8 mx-auto">
  <form action="<%=action%>" method="post">
    <div class="form-group">
      <fieldset>
        <label class="form-label" for="title">Title</label>
        <input class="form-control" id="title" name="title" type="text" placeholder="Article Title..." value="<%- typeof article!='undefined'?article.title:''%>">
      </fieldset>
    </div>
    <div class="form-group">
      <fieldset>
        <label class="form-label" for="status">Status</label>
        <select class="form-control" id="status" name="status">
            <option value="public" <%- typeof article!='undefined'&&article.status=='public'?'selected':''%>>Public</option>
            <option value="private" <%- typeof article!='undefined'&&article.status=='private'?'selected':''%>>Private</option>
        </select>
      </fieldset>
    </div>
    <div class="form-group">
      <fieldset>
        <label for="article" class="form-label">Article</label>
        <div id="toolbar-container"></div>
        <textarea name="article" id="article" rows="10" cols="30" class="form-control"><%- typeof article!='undefined'?article.article:''%></textarea>
      </fieldset>
    </div>
    <button type="submit" class="btn btn-primary btn-sm mt-2"><%=caption%></button>
    <a href="/dashboard" class="btn btn-info btn-sm mt-2">Cancel</a>
    <input type="hidden" name="author" value="<%=user._id%>">
  </form>
</div>

<script src="/ckeditor/ckeditor.js"></script>
<script>
  ClassicEditor
  //   BalloonEditor
  //   DecoupledEditor
    .create(document.querySelector('#article'))
    .then(editor => {
      console.log(editor);
    })
    .catch(error => {
      console.error(error);
    });
</script>